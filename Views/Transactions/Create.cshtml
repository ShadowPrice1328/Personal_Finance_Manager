@inject Personal_Finance_Manager.Models.AppDbContext _appDbContext
@model Personal_Finance_Manager.Models.Transaction

@{
    ViewData["Title"] = "Add Transaction";
}

<h1>Add new Transaction:</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <div class="select-wrapper">
                    @if (_appDbContext.Categories.Any())
                    {
                        <select asp-for="Category" class="form-control">
                            @foreach (var category in _appDbContext.Categories.ToList())
                            {
                                <option value="@category.Name">@category.Name</option>
                            }
                        </select>
                    }
                    else
                    {
                        <select asp-for="Category" class="form-control" disabled>
                            <option value="">No categories available</option>
                        </select>
                    }
                    <span class="arrow-down">&#9660;</span>
                </div>

                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div class="select-wrapper">
                    <select asp-for="Type" class="form-control">
                        <option value="Expense" selected>Expense</option>
                        <option value="Revenue">Revenue</option>
                    </select>
                    <span class="arrow-down">&#9660;</span>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required="false" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-custom">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
